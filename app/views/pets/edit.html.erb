<h1>Editing pet</h1>

<% form_for(@pet) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :missing %><br />
    <%= f.check_box :missing %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :lastseen %><br />
    <%= f.date_select :lastseen %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @pet %> |
<%= link_to 'Back', pets_path %>
