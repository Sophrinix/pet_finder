= render @user 

- form_for(@user) do |f|
  = f.error_messages
  %ol{ :class=>"formList"}

  %li
    = f.label :username 
    %br 
    = f.text_field :username 
  %li
    = f.label :email 
    %br 
    = f.text_field :email 
  %li
    = f.label :password, "Password"
    = f.password_field :password 
  %li
    = f.label :password_confirmation, "Password confirmation"
    = f.password_field :password_confirmation 
  %li
    = f.submit 'Submit' 
