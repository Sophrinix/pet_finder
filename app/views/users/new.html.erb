<%= render @user %>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>
  <ol class="formList">

  <li>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </li>
  <li>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </li>
  <li>
    <%= f.label :password, "Password"%>
    <%= f.password_field :password %>
  </li>
  <li>
    <%= f.label :password_confirmation, "Password confirmation"%>
    <%= f.password_field :password_confirmation %>
  </li>
  <li>
    <%= f.submit 'Submit' %>
  </li>
  </ol>
<% end %>
